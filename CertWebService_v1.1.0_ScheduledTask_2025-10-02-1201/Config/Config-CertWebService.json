                                                 "Install.bat"
                                             ],
                         "ManagementFiles":  [
                                                 "Update.ps1",
                                                 "Remove.ps1",
                                                 "Cleanup-CertWebService.ps1",
                                                 "Manage-CertWebService-Updates.ps1"
                                             ],
                         "DocumentationFiles":  [
                                                    "*.md",
                                                    "*.txt"
                                                ],
                         "ArchiveFiles":  [
                                              "old\\*",
                                              "PowerShell-Versions\\*"
                                          ]
                     }
}
