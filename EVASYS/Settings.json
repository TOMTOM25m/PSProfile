{
    "ScriptVersion": "v6.0.0",
    "RegelwerkVersion": "v9.6.2",
    "Language": "de-DE",
    "Environment": "PROD",
    
    "EvaSys": {
        "UpdateDirectory": "EvaSysUpdates",
        "BackupDirectory": "EvaSys_Backups",
        "DumpDirectory": "dump",
        "SupportedFormats": ["zip", "7z", "rar"],
        "ProcessTimeout": 300,
        "MaxPackageSize": "500MB"
    },
    
    "Processing": {
        "AutoExtract": true,
        "CreateBackups": true,
        "ValidatePackages": true,
        "ProcessReadme": true,
        "AllowedInstructions": ["copy", "move", "delete", "create", "run", "service"],
        "RestrictedPaths": ["C:\\Windows", "C:\\Program Files"]
    },
    
    "Logging": {
        "LogDirectory": "LOG",
        "LogLevel": "INFO",
        "LogRetentionDays": 30,
        "MaxLogSize": "10MB",
        "EnableFileLogging": true,
        "EnableConsoleLogging": true
    },
    
    "Security": {
        "RequireAdminRights": true,
        "ValidateCommands": true,
        "CreateRestorePoints": false,
        "SandboxMode": false
    },
    
    "Notifications": {
        "Enabled": true,
        "EmailEnabled": false,
        "SMTPServer": "",
        "SMTPPort": 587,
        "Recipients": [],
        "LogOnlyErrors": false
    },
    
    "Performance": {
        "MaxConcurrentOperations": 3,
        "MemoryLimit": "1GB",
        "TempCleanupEnabled": true,
        "CompressionLevel": "Optimal"
    },
    
    "Compliance": {
        "RegelwerkVersion": "v9.6.2",
        "CrossScriptCommunication": true,
        "MessageDirectory": "LOG\\Messages",
        "StatusDirectory": "LOG\\Status",
        "PowerShellCompatibility": "5.1+",
        "UnicodeSupport": "conditional",
        "AuditTrail": true,
        "ChangeTracking": true
    }
}